{% block stylesheets %}
<style>
input[type=checkbox] {
    -webkit-appearance: none;
    -moz-appearance: none;
    -ms-appearance: none;
}
input[type=checkbox] {
    border-radius: 4px;
    height: 25px;
    width: 25px;
    background: #333;
    border: 2px solid #dcdcdc;
}
input[type="checkbox"]:checked {
  background: green;
  margin:0px;
  position: relative;
  &:before {
    font-family: FontAwesome;
    content: '\f00c';
    display: block;
    color: grey;
    font-size: 13px;
    position: absolute;
  }
}
</style>
