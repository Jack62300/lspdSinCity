{% extends 'base.html.twig' %}

{% block title %}Liste des Agents{% endblock %}

{% block body %}
    <h1>Liste des Agents</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Roles</th>
                <th>Grade</th>
                <th>Matricule</th>
                <th>AutorisationCasier</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.grade }}</td>
                <td>{{ user.matricule }}</td>
                <td>{{ user.autorisationCasier ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a  class="btn btn-success" href="{{ path('user_new') }}">Nouvelle Utilisateurs</a>
{% endblock %}
